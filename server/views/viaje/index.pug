extends ../layout/index
block contenido 
    main.container.mt-5
        .row
            .col-md-5
                img.img-fluid(src=`/img/destinos_${viaje.imagen}_ln.jpg`, alt="Imagen de nosotros")
            .col-md-7
                //- forma de mostrar variables #{pagina} y a como esta abajo
                h1= viaje.tituloViaje
                p
                    i.fas.fa-calendar-alt
                    |  #{viaje.fechaSalida} -- #{viaje.fechaVuelta} 
                p
                    i.fas.fa-dollar-sign
                    |  Q. #{viaje.precio} 
                p
                    i.fas.fa-users
                    |  Disponibles: #{viaje.disponibles} 
                p= viaje.descripcion